<h1><%=@post.title%></h1><br>
<h2><%=@post.content%></h2><br>

<ul>
<%@post.comments.each do |comment|%>

<h3><li><%=comment.content%></li></h3>
<%end%>

</ul>

<ul>
<%@post.post_users.each do |user|%>


<h3><li><%=link_to user.username, user_path(user)%></li></h3>
<%end%>

<h1>Create Comment</h1>
<%=form_for @post.comments.build do |f|%>
<%=f.hidden_field :post_id%>
<%=f.text_area :content%>
<%=f.collection_select :user_id, User.all, :id, :username, include_blank: "Choose User" %>
<%=f.submit%>


<h1>New User</h1>

 <%= f.fields_for :user, @post.comments.last.user.build do |user_fields|%>
 <br>
    Username:
    <%= user_fields.text_field :username %>
    Email:
    <%= user_fields.text_field :email %>
  <% end %>
   <%= f.submit %>
   <%end%>

</ul>





